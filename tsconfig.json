{
	"compilerOptions": {
		"module": "esnext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"target": "esnext",
		"lib": ["esnext"],
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "src/types/*"],
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"typedocOptions": {
		"mode": "modules",
		"out": "docs"
	},
	"ts-node": {
		"esm": true,
		"files": true
	}
}
