{
	"name": "sso",
	"version": "0.0.2",
	"scripts": {
		"dev": "nodemon",
		"start": "node --loader ts-paths-esm-loader --experimental-specifier-resolution=node ./src",
		"build": "node build.js && cp -r env dist/env",
		"commit-a": "git add . && git cz",
		"commit": "git cz",
		"lint": "tslint --project \"tsconfig.json\"",
		"test": "jest --testTimeout=10000",
		"generate-docs": "typedoc --tsconfig ./tsconfig.json",
		"snyk-protect": "snyk protect",
		"prepare": "npm run snyk-protect"
	},
	"nodemonConfig": {
		"watch": [
			"src"
		],
		"ext": "ts, html",
		"ignore": [
			"src/public"
		],
		"exec": "node --loader ts-paths-esm-loader --experimental-specifier-resolution=node ./src"
	},
	"type": "module",
	"dependencies": {
		"@types/axios": "^0.14.0",
		"@types/base-64": "^1.0.0",
		"base-64": "^1.0.0",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"date-fns": "^2.28.0",
		"dotenv": "^8.6.0",
		"express": "^4.17.3",
		"express-async-errors": "^3.1.1",
		"got": "^12.0.4",
		"helmet": "^4.6.0",
		"mongoose": "^5.13.14",
		"morgan": "^1.10.0",
		"snyk": "^1.910.0"
	},
	"devDependencies": {
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/find": "^0.2.1",
		"@types/helmet": "^4.0.0",
		"@types/jsonfile": "^6.1.0",
		"@types/mongoose": "^5.11.97",
		"@types/morgan": "^1.9.3",
		"@types/node": "^14.18.13",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"eslint": "^7.32.0",
		"find": "^0.3.0",
		"fs-extra": "^9.1.0",
		"git-cz": "^4.8.0",
		"jsonfile": "^6.1.0",
		"nodemon": "^2.0.15",
		"ts-node": "^9.1.1",
		"ts-paths-esm-loader": "^1.3.0",
		"tsconfig-paths": "^3.14.1",
		"typedoc": "^0.20.37",
		"typescript": "^4.2.4"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"snyk": true
}
